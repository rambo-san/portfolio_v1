// Firestore Security Rules for Portfolio
// Copy these rules to Firebase Console -> Firestore Database -> Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(oderId) {
      return isAuthenticated() && request.auth.uid == oderId;
    }
    
    // Helper function to get user's role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    // ==================== SITE CONFIG ====================
    // Only admins can write, anyone can read
    match /config/{configId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ==================== USERS ====================
    match /users/{oderId} {
      // Anyone can read user profiles (for leaderboards)
      allow read: if true;
      
      // Users can create their own profile
      allow create: if isOwner(oderId);
      
      // Users can update their own profile, but not their role (unless admin)
      allow update: if isOwner(oderId) && (
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']) || isAdmin()
      );
      
      // Only admins can delete users
      allow delete: if isAdmin();
      
      // User's achievements subcollection
      match /achievements/{achievementId} {
        allow read: if true;
        allow write: if isOwner(oderId) || isAdmin();
      }
    }
    
    // ==================== GAME SESSIONS ====================
    match /gameSessions/{sessionId} {
      // Users can read their own sessions, admins can read all
      allow read: if isAuthenticated() && (
        resource.data.oderId == request.auth.uid || isAdmin()
      );
      
      // Users can create sessions for themselves
      allow create: if isAuthenticated() && request.resource.data.oderId == request.auth.uid;
      
      // Sessions cannot be updated or deleted (immutable history)
      allow update, delete: if isAdmin();
    }
    
    // ==================== LEADERBOARDS ====================
    match /leaderboards/{entryId} {
      // Anyone can read leaderboards
      allow read: if true;
      
      // Authenticated users can create/update their own entries
      allow create: if isAuthenticated() && request.resource.data.oderId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.oderId == request.auth.uid && (
        // Only allow score updates if new score is higher
        request.resource.data.score >= resource.data.score
      );
      
      // Only admins can delete leaderboard entries
      allow delete: if isAdmin();
    }
    
    // ==================== ACHIEVEMENTS DEFINITIONS ====================
    match /achievements/{achievementId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ==================== GAMES CONFIG ====================
    match /games/{gameId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
